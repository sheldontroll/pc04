@model List<Fail>


@if (Model.Count()==0)
{
    <p class="text-center"> No hay imagenes para mostrar </p>
}else{
    @foreach (var item in Model)
    {

        <form asp-action="Comentario" asp-controller="Comentario">
            <div class="col-4 text-center">          
            <button> <h2>@item.titulo</h2></button>
            <button> <h2>Subido por @item.usuario</h2>   </button>
            <button> <img  src="@item.gif" class="img-fluid"> </button>
            <input name="idfail" value="@item.id" hidden>
            </div>
        </form>

    }
}
